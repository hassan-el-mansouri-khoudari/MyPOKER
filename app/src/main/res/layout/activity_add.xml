<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <FrameLayout
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/poker_table"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.8"
            android:background="@drawable/layout_bg"
            android:backgroundTint="@color/colorPrimary"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/totalMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="7600"
                android:textStyle="bold" />

            <Button
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Register" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player6"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@drawable/layout_bg"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fadingEdge="horizontal|vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="HAHAHAHA"/>

            <EditText
                android:id="@+id/winnings6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@drawable/layout_bg"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fadingEdge="horizontal|vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/winnings5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@drawable/layout_bg"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fadingEdge="horizontal|vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/winnings4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@drawable/layout_bg"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fadingEdge="horizontal|vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/winnings3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@drawable/layout_bg"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fadingEdge="horizontal|vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/winnings1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@drawable/layout_bg"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fadingEdge="horizontal|vertical"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/winnings2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>


</android.support.constraint.ConstraintLayout>